<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

   
    <table border="1">
        <tr>
           <th>No</th><th>Image</th><th>Name</th><th>Price</th><th>Delete</th>
        </tr>
     
        <% for (var i = 0; i < listItem.length; i++) { %>
         <tr>
           <td><%= i + 1 %></td>
           <td><img src="<%= listItem[i].image %>" width="100px"></td>
           <td><%= listItem[i].name %></td>
           <td><%= formatPrice(listItem[i].price) %></td>
           <td>
            <a href="/users/checkoutItem/<%= listItem[i].id %>/delete">
                <button>Delete</button>
            </a>
           </td>
         </tr>    
        <% } %>
     </table>

         <p>Total Belanja : <%=formatPrice(totalTransaction[0].sum)%></p>
     <br>
     <div style="margin-left:20px">
        <%if(listItem.length){%>
            <button>Purchase Now!</button><br>
            <img src="<%= qr_code %>"><br>
        <%}%> 
    </div>
</body>
<script>
    function openForm() {
      document.getElementById("myForm").style.display = "block";
    }
    function closeForm() {
      document.getElementById("myForm").style.display = "none";
    }
    </script>
</html>